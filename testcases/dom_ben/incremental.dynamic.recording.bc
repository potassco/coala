possible(exit) <if> current_horizon(E), pending_requests, solved <where> end(E).
possible(ground(S)) <if>  result(unsat), grounded(R), solved <where> next(R,S).
possible(idle) <if> result(sat), current_horizon(0), -pending_messages, solved.
possible(idle) <if> result(sat), current_time_step(R), -grounded(S), -pending_messages, -pending_actions, solved <where> next(R,S).
possible(idle) <if> pending_actions, -pending_messages.
possible(initialize) <if> -grounded(0).
possible(release_external(query(S))) <if> result(unsat), current_horizon(S), solved <where> time_step(S).
possible(release_time_step(S)) <if> current_time_step(S), -pending_messages, -pending_actions, -current_horizon(S), solved <where> time_step(S).
